<% unless pills.blank? %>
  <div class="about-item">
    <h3 class="content-heading" id="<%= pills_heading.downcase %>"><%= pills_heading %></h3>
    <div class="pill-section">
      <% pills.each do |pill| %>
        <div class="pill-wrapper">
          <div class="pill">
            <%= search_link(pill) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>