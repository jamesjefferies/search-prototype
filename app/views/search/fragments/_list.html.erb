<!--      for lists (any number of items) -->
<% unless items.blank? %>
  <% if items.size > 2 %>
    <!--      any before last two are "item, "-->
    <% items[0...-2].each do |member| %>
      <%= search_link(member) %>,
    <% end %>
  <% elsif items.size == 2 %>
    <!--      penultimate one is "item and "-->
    <%= search_link(items.last(2).first, singular: singular) %> and
  <% end %>
  <!--      last one is "item." or "item," etc. -->
  <%= search_link(items.last, singular: singular) %><%= terminator %>
<% end %>