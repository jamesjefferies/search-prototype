<div class="content-prelim-box">
  <div class="content-prelim-inner">
    <div class="content-prelim-text" id="prelim-text">
      A <%= object_display_name_link(object.object_name) %>
      <% unless object.legislative_stage.blank? %>
        (<%= search_link(object.legislative_stage) %>)
      <% end %>
      on
      <strong><%= format_date(object.date) %></strong>,
      in the <%= render 'search/fragments/list', items: object.legislature, terminator: ',', singular: false %>
      led by <%= search_link(object.lead_member) %>.
      <% unless object.answering_members.blank? %>
        The answering members were
        <%= render 'search/fragments/list', items: object.answering_members, terminator: '.', singular: false %>
      <% end %>
    </div>
  </div>
</div>

