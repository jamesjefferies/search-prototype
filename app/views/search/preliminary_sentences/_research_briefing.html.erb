<div class="content-prelim-box">
  <div class="content-prelim-inner">
    <div class="content-prelim-text" id="prelim-text">
      A <%= link_to(object.object_name, search_path(filter: object.type)) %>
      <% if object.creator %>
        by <%= ses_object_link(object.creator) %>
      <% end %>
      published on <strong><%= format_date(object.published_on) %></strong>.
      <% if object.updated_on %>
        It was updated on <strong><%= format_date(object.updated_on) %></strong>.
      <% end %>
    </div>
  </div>
</div>

