<div class="result-item simple-view" data-detailed-results-target="toggleHidden">
  <p><%= link_to(object.object_title, object_show_url(object: object.object_uri[:value])) %></p>
  <%#= render 'search/results/item_details/description', description: object.description %>
  <%= render 'search/results/item_details/date', date: object.date %>
  <%= render 'search/results/item_details/type', type: object.type %>
<%#= render 'search/results/item_details/authors', authors: object.authors %>
  <%= render 'search/results/item_details/reference', reference: object.reference %>
  <%= render 'search/results/item_details/legislation', legislation: object.legislation %>
</div>

<div hidden class="result-item detailed-view" data-detailed-results-target="toggleHidden">
  <p><%= link_to(object.object_title, object_show_url(object: object.object_uri[:value])) %></p>
  <%#= render 'search/results/item_details/description', description: object.description %>
  <%= render 'search/results/item_details/date', date: object.date %>
  <%= render 'search/results/item_details/type', type: object.type %>
  <%#= render 'search/results/item_details/authors', authors: object.authors %>
  <%= render 'search/results/item_details/reference', reference: object.reference %>
  <%= render 'search/results/item_details/legislation', legislation: object.legislation %>
  <%= render 'search/results/item_details/pills', pills: object.subjects, pills_heading: 'Subjects' %>
  <%= render 'search/results/item_details/pills', pills: object.topics, pills_heading: 'Topics' %>
</div>