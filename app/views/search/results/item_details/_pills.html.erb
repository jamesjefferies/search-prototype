<% unless pills.blank? %>
  <div class="item-details">
    <h5 class="content-heading" class="<%= pills_heading.downcase %>"><%= pills_heading %></h5>
    <div class="pill-section">
      <% pills.each do |pill| %>
        <div class="pill-wrapper">
          <div class="pill">
            <%= object_display_name(pill, singular: false) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>