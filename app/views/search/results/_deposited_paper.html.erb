<div class="result-item">
  <p><%= link_to(object.object_title, object_show_url(object: object.object_uri[:value])) %></p>
  <%= render 'search/results/item_details/description', description: object.abstract_text %>
  <%= render 'search/results/item_details/date', date: object.date %>
  <%= render 'search/results/item_details/type', type: object.object_name %>
  <%= render 'search/results/item_details/departments', departments: object.departments %>
  <%= render 'search/results/item_details/legislature', legislature: object.legislature %>
  <%= render 'search/results/item_details/reference', reference: object.reference %>
  <div hidden class="detailed-view" data-detailed-results-target="toggleHidden">
    <%= render 'search/results/item_details/legislation', legislation: object.legislation %>
    <%= render 'search/results/item_details/library_location', commons: object.commons_library_location, lords: object.lords_library_location %>
    <%= render 'search/results/item_details/commitment_to_deposit_date', commitment_to_deposit_date: object.commitment_to_deposit_date %>
    <%= render 'search/results/item_details/deposited_date', deposited_date: object.deposited_date %>
    <%= render 'search/results/item_details/date_originated', date_originated: object.date_originated %>
    <%= render 'search/results/item_details/corporate_author', corporate_author: object.corporate_author %>
    <%= render 'search/results/item_details/personal_author', personal_author: object.personal_author %>
    <%= render 'search/results/item_details/pills', pills: object.subjects, pills_heading: 'Subjects' %>
  </div>
</div>