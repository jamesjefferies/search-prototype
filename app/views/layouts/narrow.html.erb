<!DOCTYPE html>
<html lang="en-GB">
<%= render '/layouts/head' %>
<body>
<%= render '/layouts/nav' %>
<main class="narrow">
  <div>
    <header>
      <%= yield :before_title if content_for?(:before_title) %>
      <% if content_for?(:title) %>
        <h1>
          <%= yield :title %>
        </h1>
      <% end %>
    </header>
    <%= yield %>
  </div>
</main>
<%= render '/layouts/footer' %>
</body>
</html>